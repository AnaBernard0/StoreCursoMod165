@*using Microsoft.AspNetCore.Authorization*@
@model IEnumerable<StoreCursoMod165.Models.Customer>


<h1>Products</h1>

<p>
    <a asp-action="Create">Create New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerNumber)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>No Data</tr>
        }
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.NIF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => customer.CustomerNumber)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.ID">Details</a>
                    <a asp-action="Edit" asp-route-id="@customer.ID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>